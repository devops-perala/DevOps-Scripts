#!/bin/bash
set -e

# ðŸš¨ Ensure system has at least 2GB RAM
MEM=$(free -m | awk '/^Mem:/{print $2}')
if [ "$MEM" -lt 2048 ]; then
  echo "âš ï¸ WARNING: Nexus requires at least 2GB RAM. Current: ${MEM}MB"
fi

# âœ… Use a known working version with Java 11
NEXUS_VERSION="3.68.1-02"
DOWNLOAD_URL="https://download.sonatype.com/nexus/3/nexus-${NEXUS_VERSION}-unix.tar.gz"

echo "ðŸ“¦ Nexus Version: ${NEXUS_VERSION}"
echo "ðŸ“¥ Download URL: ${DOWNLOAD_URL}"

echo "1ï¸âƒ£ Updating system packages..."
sudo apt-get update -y

echo "2ï¸âƒ£ Installing OpenJDK 11..."
sudo apt-get install -y openjdk-11-jdk openjdk-11-jre

echo "3ï¸âƒ£ Downloading Nexus ${NEXUS_VERSION}..."
cd /opt
sudo wget -q "${DOWNLOAD_URL}" -O "nexus-${NEXUS_VERSION}.tar.gz"

echo "4ï¸âƒ£ Extracting Nexus..."
sudo tar -zxvf "nexus-${NEXUS_VERSION}.tar.gz"
sudo mv "nexus-${NEXUS_VERSION}" nexus

echo "5ï¸âƒ£ Creating 'nexus' user and group..."
sudo adduser --system --group nexus || true

echo "6ï¸âƒ£ Granting sudoâ€‘less permissions to 'nexus'..."
echo "nexus ALL=(ALL) NOPASSWD: ALL" | sudo tee /etc/sudoers.d/nexus

echo "7ï¸âƒ£ Adjusting ownership and permissions..."
sudo chown -R nexus:nexus /opt/nexus
sudo mkdir -p /opt/sonatype-work/nexus3/{log,tmp}
sudo chown -R nexus:nexus /opt/sonatype-work

echo "8ï¸âƒ£ Configuring run_as_user..."
echo 'run_as_user="nexus"' | sudo tee /opt/nexus/bin/nexus.rc
sudo chmod +x /opt/nexus/bin/nexus

echo "9ï¸âƒ£ Setting JVM options..."
sudo tee /opt/nexus/bin/nexus.vmoptions > /dev/null <<EOF
-Xms1024m
-Xmx1024m
-XX:MaxDirectMemorySize=1024m
-XX:LogFile=./sonatype-work/nexus3/log/jvm.log
-XX:-OmitStackTraceInFastThrow
-Djava.net.preferIPv4Stack=true
-Dkaraf.home=.
-Dkaraf.base=.
-Dkaraf.etc=etc/karaf
-Djava.util.logging.config.file=/etc/karaf/java.util.logging.properties
-Dkaraf.data=./sonatype-work/nexus3
-Dkaraf.log=./sonatype-work/nexus3/log
-Djava.io.tmpdir=./sonatype-work/nexus3/tmp
EOF

echo "ðŸ”Ÿ Creating Nexus systemd service..."
sudo tee /etc/systemd/system/nexus.service > /dev/null <<EOF
[Unit]
Description=Nexus Repository Service
After=network.target

[Service]
Type=forking
LimitNOFILE=65536
ExecStart=/opt/nexus/bin/nexus start
ExecStop=/opt/nexus/bin/nexus stop
User=nexus
Restart=on-abort

[Install]
WantedBy=multi-user.target
EOF

echo "ðŸ” Reloading systemd and enabling service..."
sudo systemctl daemon-reload
sudo systemctl enable nexus

echo "âœ… Manually testing Nexus startup..."
sudo -u nexus /opt/nexus/bin/nexus start || {
  echo "âŒ Manual start failed. Check logs: /opt/sonatype-work/nexus3/log/nexus.log"
  exit 1
}

echo "âœ… Nexus started successfully."

echo "ðŸ”“ Allowing firewall access on port 8081..."
sudo ufw allow 8081/tcp || true

echo "ðŸŽ‰ Nexus installation complete!"
echo "ðŸ”— Access it at: http://$(hostname -I | awk '{print $1}'):8081"
